<web-app>

    <servlet>
        <servlet-name>JspAddUser</servlet-name>
        <servlet-class>servlets.jsp.JspAddUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>JspDeleteUser</servlet-name>
        <servlet-class>servlets.jsp.JspDeleteUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>JspUpdateUser</servlet-name>
        <servlet-class>servlets.jsp.JspUpdateUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>User Controller</servlet-name>
        <servlet-class>servlets.UserController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>servlets.AddUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>servlets.DeleteUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <servlet-class>servlets.UpdateUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GetUsers</servlet-name>
        <servlet-class>servlets.GetUsers</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MvcAddUser</servlet-name>
        <servlet-class>servlets.mvc_controllers.MvcAddUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MvcDeleteUser</servlet-name>
        <servlet-class>servlets.mvc_controllers.MvcDeleteUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MvcUpdateUser</servlet-name>
        <servlet-class>servlets.mvc_controllers.MvcUpdateUser</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>servlets.filters.SigninController</servlet-class>
    </servlet>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>servlets.filters.AuthFilter</filter-class>
    </filter>

    <servlet>
        <servlet-name>AdminRole</servlet-name>
        <servlet-class>servlets.filters.AdminRole</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserRole</servlet-name>
        <servlet-class>servlets.filters.UserRole</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>JsonController</servlet-name>
        <servlet-class>servlets.JsonController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JspAddUser</servlet-name>
        <url-pattern>/jspadd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JspDeleteUser</servlet-name>
        <url-pattern>/jspdelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JspUpdateUser</servlet-name>
        <url-pattern>/jspupdate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>User Controller</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetUsers</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MvcAddUser</servlet-name>
        <url-pattern>/mvcadd</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MvcDeleteUser</servlet-name>
        <url-pattern>/mvcdelete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MvcUpdateUser</servlet-name>
        <url-pattern>/mvcupdate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <servlet-mapping>
        <servlet-name>AdminRole</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserRole</servlet-name>
        <url-pattern>/userrole</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JsonController</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>

</web-app>
